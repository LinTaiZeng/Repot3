<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--dubbo应用名称-->
    <dubbo:application name="provider_springboot_xml"/>
    <!--dubbo通讯协议-->
    <dubbo:protocol port="28800" />
    <!--定义注册中心地址-->
    <dubbo:registry protocol="zookeeper" address="192.168.4.129:2181" />
    <!--定义服务提供者-->
    <bean id="userService" class="com.ltz.service.impl.UserServiceImpl" />
    <dubbo:service interface="com.ltz.service.IUserService" ref="userService" />
</beans>